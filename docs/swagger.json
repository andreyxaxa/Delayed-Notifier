{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/v1/notify": {
            "post": {
                "description": "Creates new notification",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "notifications"
                ],
                "summary": "Create notification",
                "operationId": "create",
                "parameters": [
                    {
                        "description": "Notification",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/request.CreateNotificationRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.CreateNotificationResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/response.Error"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/response.Error"
                        }
                    }
                }
            }
        },
        "/v1/notify/{id}": {
            "get": {
                "description": "Returns notification status by UUID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "notifications"
                ],
                "summary": "Get notification status",
                "operationId": "get",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Notification UUID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.GetNotificationStatusResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/response.Error"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/response.Error"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/response.Error"
                        }
                    }
                }
            },
            "delete": {
                "description": "Cancel notification by UUID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "notifications"
                ],
                "summary": "Cancel notification",
                "operationId": "cancel",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Notification UUID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.CancelNotificationResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/response.Error"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/response.Error"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/response.Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "entity.EmailPayload": {
            "type": "object",
            "required": [
                "subject",
                "text",
                "to"
            ],
            "properties": {
                "subject": {
                    "type": "string",
                    "example": "Birtdhay"
                },
                "text": {
                    "type": "string",
                    "example": "Hello, dont forget about Alex's birthday!"
                },
                "to": {
                    "type": "string",
                    "example": "user@example.com"
                }
            }
        },
        "entity.Payload": {
            "type": "object",
            "required": [
                "channel"
            ],
            "properties": {
                "channel": {
                    "type": "string",
                    "enum": [
                        "email",
                        "telegram"
                    ]
                },
                "email": {
                    "$ref": "#/definitions/entity.EmailPayload"
                },
                "telegram": {
                    "$ref": "#/definitions/entity.TelegramPayload"
                }
            }
        },
        "entity.TelegramPayload": {
            "type": "object",
            "required": [
                "chat_id",
                "text"
            ],
            "properties": {
                "chat_id": {
                    "type": "integer",
                    "example": 123456789
                },
                "text": {
                    "type": "string",
                    "example": "Hello, here's your delayed notification."
                }
            }
        },
        "request.CreateNotificationRequest": {
            "type": "object",
            "required": [
                "payload",
                "send_at"
            ],
            "properties": {
                "payload": {
                    "$ref": "#/definitions/entity.Payload"
                },
                "send_at": {
                    "type": "string",
                    "example": "2026-01-23T20:03:30+03:00"
                }
            }
        },
        "response.CancelNotificationResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "pending"
                },
                "uid": {
                    "type": "string",
                    "example": "9a88d642-6c65-4f0f-b8f0-b920182cceb3"
                }
            }
        },
        "response.CreateNotificationResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "pending"
                },
                "uid": {
                    "type": "string",
                    "example": "9a88d642-6c65-4f0f-b8f0-b920182cceb3"
                }
            }
        },
        "response.Error": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "response.GetNotificationStatusResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "sent"
                }
            }
        }
    }
}